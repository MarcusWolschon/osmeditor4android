<?xml version="1.0" encoding="utf-8"?>
<view
    class="io.vespucci.views.DateRangePicker"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginTop="4dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ch.poole.android.numberpickerview.library.NumberPickerView
            android:id="@+id/startYear"
            android:layout_width="wrap_content"
            android:layout_height="240dp"
            android:layout_centerHorizontal="true"
            app:npv_ItemPaddingHorizontal="2dp"
            app:npv_ItemPaddingVertical="5dp"
            app:npv_ShownCount="5"
            app:npv_RespondChangeOnDetached="false"
            app:npv_TextSizeNormal="16sp"
            app:npv_TextSizeSelected="20sp"
            app:npv_WrapSelectorWheel="true" />
        <ch.poole.android.numberpickerview.library.NumberPickerView
            android:id="@+id/startMonth"
            android:layout_width="wrap_content"
            android:layout_height="240dp"
            android:layout_centerHorizontal="true"
            android:contentDescription="test_number_picker_view"
            app:npv_ItemPaddingHorizontal="2dp"
            app:npv_ItemPaddingVertical="5dp"
            app:npv_ShownCount="5"
            app:npv_RespondChangeOnDetached="false"
            app:npv_TextSizeNormal="16sp"
            app:npv_TextSizeSelected="20sp"
            app:npv_WrapSelectorWheel="true" />
        <ch.poole.android.numberpickerview.library.NumberPickerView
            android:id="@+id/startDay"
            android:layout_width="wrap_content"
            android:layout_height="240dp"
            android:layout_centerHorizontal="true"
            android:contentDescription="test_number_picker_view"
            app:npv_ItemPaddingHorizontal="2dp"
            app:npv_ItemPaddingVertical="5dp"
            app:npv_ShownCount="5"
            app:npv_RespondChangeOnDetached="false"
            app:npv_TextSizeNormal="16sp"
            app:npv_TextSizeSelected="20sp"
            app:npv_WrapSelectorWheel="true" />
        <ch.poole.android.numberpickerview.library.NumberPickerView
            android:id="@+id/endYear"
            android:layout_width="wrap_content"
            android:layout_height="240dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            app:npv_ItemPaddingHorizontal="2dp"
            app:npv_ItemPaddingVertical="5dp"
            app:npv_ShownCount="5"
            app:npv_RespondChangeOnDetached="false"
            app:npv_TextSizeNormal="16sp"
            app:npv_TextSizeSelected="20sp"
            app:npv_WrapSelectorWheel="true" />
        <ch.poole.android.numberpickerview.library.NumberPickerView
            android:id="@+id/endMonth"
            android:layout_width="wrap_content"
            android:layout_height="240dp"
            android:layout_centerHorizontal="true"
            android:contentDescription="test_number_picker_view"
            app:npv_ItemPaddingHorizontal="2dp"
            app:npv_ItemPaddingVertical="5dp"
            app:npv_ShownCount="5"
            app:npv_RespondChangeOnDetached="false"
            app:npv_TextSizeNormal="16sp"
            app:npv_TextSizeSelected="20sp"
            app:npv_WrapSelectorWheel="true" />
        <ch.poole.android.numberpickerview.library.NumberPickerView
            android:id="@+id/endDay"
            android:layout_width="wrap_content"
            android:layout_height="240dp"
            android:layout_centerHorizontal="true"
            android:contentDescription="test_number_picker_view"
            app:npv_ItemPaddingHorizontal="2dp"
            app:npv_ItemPaddingVertical="5dp"
            app:npv_ShownCount="5"
            app:npv_RespondChangeOnDetached="false"
            app:npv_TextSizeNormal="16sp"
            app:npv_TextSizeSelected="20sp"
            app:npv_WrapSelectorWheel="true" />
    </LinearLayout>
</view>