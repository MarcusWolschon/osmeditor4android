<?xml version="1.0" encoding="utf-8"?>
<!-- inner classes must be specified using <view class="classname" /> due 
    to dollar sign -->
<view class="de.blau.android.dialogs.ReviewAndUpload$CustomTagRow"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout android:orientation="horizontal"
        android:baselineAligned="false"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" style="?attr/Layout"
        android:saveEnabled="false">
        <AutoCompleteTextView
            android:id="@+id/editKey" android:saveEnabled="false"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginEnd="1dp" 
            android:layout_weight="3"
            android:completionThreshold="1"
            android:dropDownWidth="wrap_content"
            android:hint="@string/key"
            android:inputType="textNoSuggestions"
            android:minHeight="34dp" android:paddingLeft="5dp"
            android:paddingRight="5dp" android:maxLines="1" />
        <de.blau.android.views.CustomAutoCompleteTextView
            android:id="@+id/editValue" android:saveEnabled="false"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="1dp" android:layout_weight="2"
            android:completionThreshold="1"
            android:dropDownWidth="wrap_content"
            android:hint="@string/value"
            android:inputType="textNoSuggestions"
            android:minHeight="34dp" android:paddingLeft="5dp"
            android:paddingRight="5dp" android:maxLines="1" />
        <ImageButton android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="16dp" android:paddingEnd="5dp"
            android:paddingRight="5dp"
            android:focusable="false" 
            android:background="@android:color/transparent"
            app:tint="?attr/colorAccent"
            android:src="@drawable/baseline_clear_white_36dp" 
            android:visibility="invisible"/>
    </LinearLayout>
</view>