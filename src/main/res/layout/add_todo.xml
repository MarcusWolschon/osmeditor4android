<?xml version="1.0" encoding="utf-8"?>
<!-- inner classes must be specified using <view class="classname" /> due 
    to dollar sign -->
<view
    class="io.vespucci.views.SimpleTextRow"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout
        android:orientation="vertical"
        android:baselineAligned="false"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="?attr/dialogPreferredPadding"
        style="?attr/Layout"
        android:saveEnabled="false"
        android:gravity="center_vertical">
        <TextView
            android:text="@string/todo_list_legend"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:saveEnabled="false"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginEnd="1dp"
            android:layout_weight="3"
            android:dropDownWidth="wrap_content"
            android:minHeight="34dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:maxLines="1" />
        <io.vespucci.views.CustomAutoCompleteTextView
            android:id="@+id/todoList"
            style="?attr/ListPopupWindowStyle"
            android:saveEnabled="false"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="2"
            android:completionThreshold="1"
            android:dropDownWidth="wrap_content"
            android:hint="@string/todo_list_hint"
            android:inputType="textNoSuggestions"
            android:minHeight="34dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:maxLines="1" />
        <TextView
            android:text="@string/todo_comment_legend"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:saveEnabled="false"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginEnd="1dp"
            android:layout_weight="3"
            android:dropDownWidth="wrap_content"
            android:minHeight="34dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:maxLines="1" />
        <EditText
            android:id="@+id/todoComment"
            android:saveEnabled="false"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="2"
            android:hint="@string/todo_comment_hint"
            android:inputType="textNoSuggestions"
            android:minHeight="34dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" />
    </LinearLayout>
</view>