<?xml version="1.0" encoding="utf-8"?>
<!-- inner classes must be specified using <view class="classname" /> due to dollar sign -->
<view class="io.vespucci.propertyeditor.tagform.LabelRow" xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout 
			android:orientation="horizontal"
			android:baselineAligned="false"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			style="?attr/Layout"
			android:saveEnabled="false"
		>
	    <TextView
	        android:id="@+id/label"
	        style="?attr/PresetLabelText"
	        android:saveEnabled="false"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="1dp"
	        android:layout_weight="3"
	        android:minHeight="34dp"
	        android:paddingLeft="5dp"
	        android:paddingRight="5dp"
	        android:maxLines="3"
	        android:gravity="center_vertical"
	         />	    
	</LinearLayout>
</view>