<?xml version="1.0" encoding="utf-8"?>
<!-- inner classes must be specified using <view class="classname" /> due to dollar sign -->
<view class="de.blau.android.propertyeditor.RelationMembersFragment$RelationMemberRow" xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    
    <LinearLayout 
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		style="?attr/Layout"
		android:saveEnabled="false"
		android:baselineAligned="false"
	>
	    <CheckBox
        	android:id="@+id/member_selected"
        	android:saveEnabled="false"
        	android:text=""
        	android:layout_width="34dp"
        	android:layout_height="fill_parent" 
       		android:paddingLeft="5dp"
	    	android:paddingRight="5dp"
	    	android:layout_marginBottom="1dp"
	    	android:layout_marginRight="1dp"
            android:layout_marginEnd="1dp"
	    	/>
	    <AutoCompleteTextView
	        android:id="@+id/editMemberRole"
	        android:saveEnabled="false"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="1dp"
	        android:layout_marginRight="1dp"
            android:layout_marginEnd="1dp"
	        android:layout_weight="3"
	        android:completionThreshold="1"
	        android:dropDownWidth="match_parent"
	        android:hint="@string/role_lc"
	        android:inputType="textNoSuggestions"
	        android:minHeight="34dp"
	        android:paddingLeft="5dp"
	        android:paddingRight="5dp"
			android:maxLines="1" />
	        
	    <ImageView
	        android:id="@+id/memberType"
	        style="?attr/DownloadedMember"
	        android:saveEnabled="false"
	        android:layout_width="34dp"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="1dp"
	        android:layout_marginRight="1dp"
            android:layout_marginEnd="1dp"
	        android:minHeight="35dp"
	        android:paddingLeft="0dp"
	        android:paddingRight="0dp"
			android:gravity="center_vertical"
			android:maxLines="1" />
	    
	    <TextView
	        android:id="@+id/memberObject"
	        style="?attr/DownloadedMember"
	        android:saveEnabled="false"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="1dp"
	        android:layout_weight="2"
	        android:minHeight="35dp"
	        android:paddingLeft="5dp"
	        android:paddingRight="5dp"
			android:gravity="center_vertical"
			android:maxLines="1" />
    </LinearLayout>
</view>