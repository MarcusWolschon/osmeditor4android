<?xml version="1.0" encoding="utf-8"?>
<!-- inner classes must be specified using <view class="classname" /> due to dollar sign -->
<view class="de.blau.android.propertyeditor.TagFormFragment$TagCheckGroupRow" xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout 
			android:orientation="horizontal"
			android:baselineAligned="false"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			style="?attr/Layout"
			android:saveEnabled="false"
		>
	    <TextView
	        android:id="@+id/textKey"
	        style="?attr/StaticText"
	        android:saveEnabled="false"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_marginBottom="1dp"
	        android:layout_marginRight="1dp"
            android:layout_marginEnd="1dp"
	        android:layout_weight="3"
	        android:dropDownWidth="wrap_content"
	        android:minHeight="34dp"
	        android:paddingTop="5dp"
	        android:paddingLeft="5dp"
	        android:paddingRight="5dp"
	       	android:maxLines="3"
	        android:gravity="top"
	        android:layout_gravity="center_vertical"
	         />	    
	    <LinearLayout
	        android:orientation="vertical"
	        android:id="@+id/valueGroup"
	        style="?attr/RadioGroup"
	        android:saveEnabled="false"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="1dp"
	        android:layout_marginRight="0dp"
	        android:layout_marginLeft="0dp"
	        android:layout_weight="2"
	        android:layout_gravity="center_vertical"
	        android:minHeight="34dp"
	        android:paddingLeft="0dp"
            android:paddingStart="0dp"
	        android:paddingRight="5dp"
            android:paddingEnd="5dp"
	        />
	</LinearLayout>
</view>