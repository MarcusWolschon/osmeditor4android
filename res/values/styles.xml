<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <style name="customActionBarDropdown" parent="Widget.Sherlock.Spinner.DropDown.ActionBar">
        <item name="android:gravity">right|center_vertical</item>
    </style>
    
    <style name="Theme.customMain" parent="@style/Theme.Sherlock">
        <!-- need to specify once for ActionBarSherlock, once for android native -->
        <item name="actionDropDownStyle">@style/customActionBarDropdown</item>
        <item name="android:actionDropDownStyle">@style/customActionBarDropdown</item>
    </style>
    
    <style name="Theme.customMain.Light" parent="@style/Theme.Sherlock.Light">
        <!-- need to specify once for ActionBarSherlock, once for android native -->
        <item name="actionDropDownStyle">@style/customActionBarDropdown</item>
        <item name="android:actionDropDownStyle">@style/customActionBarDropdown</item>
    </style>
    
    <style name="TagEditorActionBar" parent="Widget.Sherlock.ActionBar.Solid">
    </style>
    
    <style name="Theme.customTagEditor" parent="@style/Theme.Sherlock">
        <item name="android:background">@android:color/black</item>
        <item name="android:windowBackground">@drawable/transparent_background</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="actionBarStyle">@style/TagEditorActionBar</item>
        <item name="android:actionBarStyle">@style/TagEditorActionBar</item>
    </style>
    
    <style name="Theme.customTagEditor.Light" parent="@style/Theme.Sherlock.Light">
        <item name="android:background">@android:color/white</item>
        <item name="android:windowBackground">@drawable/transparent_background</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="actionBarStyle">@style/TagEditorActionBar</item>
        <item name="android:actionBarStyle">@style/TagEditorActionBar</item>
    </style>
    
    <style name="Theme.customHelpViewer" parent="@style/Theme.Sherlock">
        <!-- need to specify once for ActionBarSherlock, once for android native -->
        <item name="actionDropDownStyle">@style/customActionBarDropdown</item>
        <item name="android:actionDropDownStyle">@style/customActionBarDropdown</item>
        <item name="homeAsUpIndicator">@drawable/ic_drawer</item>
    </style>
    
    <style name="Theme.customHelpViewer.Light" parent="@style/Theme.Sherlock.Light">
        <!-- need to specify once for ActionBarSherlock, once for android native -->
        <item name="actionDropDownStyle">@style/customActionBarDropdown</item>
        <item name="android:actionDropDownStyle">@style/customActionBarDropdown</item>
        <item name="homeAsUpIndicator">@drawable/ic_drawer</item>
    </style>
</resources>