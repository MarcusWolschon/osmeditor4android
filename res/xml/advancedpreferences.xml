<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
	<PreferenceCategory android:title="@string/config_category_view">
	    <CheckBoxPreference
			android:key="@string/config_showCameraAction_key"
			android:title="@string/config_showCameraAction_title"
			android:summary="@string/config_showCameraAction_summary"
			android:defaultValue="true"
		/>
	    <CheckBoxPreference
			android:key="@string/config_generateAlerts_key"
			android:title="@string/config_generateAlerts_title"
			android:summary="@string/config_generateAlerts_summary"
			android:defaultValue="false"
		/>
		<CheckBoxPreference
			android:key="@string/config_forceContextMenu_key"
			android:title="@string/config_forceContextMenu_title"
			android:summary="@string/config_forceContextMenu_summary"
			android:defaultValue="false"
		/>
		<CheckBoxPreference
			android:key="@string/config_showTolerance_key"
			android:title="@string/config_showTolerance_title"
			android:summary="@string/config_showTolerance_summary"
			android:defaultValue="true"
		/>
		<CheckBoxPreference
			android:key="@string/config_use_back_for_undo_key"
			android:title="@string/config_use_back_for_undo_title"
			android:summary="@string/config_use_back_for_undo_summary"
			android:defaultValue="false"
		/>
		<CheckBoxPreference
			android:key="@string/config_closeChangesetOnSave_key"
			android:title="@string/config_closeChangesetOnSave_title"
			android:summary="@string/config_closeChangesetOnSave_summary"
			android:defaultValue="true"
		/>
		<CheckBoxPreference
			android:key="@string/config_enableLightTheme_key"
			android:title="@string/config_enableLightTheme_title"
			android:summary="@string/config_enableLightTheme_summary"
			android:defaultValue="true"
		/>
		<CheckBoxPreference
			android:key="@string/config_enableDepreciatedModes_key"
			android:title="@string/config_enableDeprecatedModes_title"
			android:summary="@string/config_enableDeprecatedModes_summary"
			android:defaultValue="false"
		/>
		<Preference
			android:title="@string/config_presetbutton_title"
			android:key="@string/config_presetbutton_key"
			android:summary="@string/config_presetbutton_summary"
		/>
		<EditTextPreference
			android:key="@string/config_extTriggeredDownloadRadius_key"
			android:title="@string/config_extTriggeredDownloadRadius_title"
			android:summary="@string/config_extTriggeredDownloadRadius_summary"
			android:dialogTitle="@string/config_extTriggeredDownloadRadius_title"
			android:numeric="integer"
			android:defaultValue="50"
		/>
		<CheckBoxPreference
			android:key="@string/config_enableNameSuggestions_key"
			android:title="@string/config_enableNameSuggestions_title"
			android:summary="@string/config_enableNameSuggestions_summary"
			android:defaultValue="true"
		/>
		<CheckBoxPreference
			android:key="@string/config_enableAutoPreset_key"
			android:title="@string/config_enableAutoPreset_title"
			android:summary="@string/config_enableAutoPreset_summary"
			android:defaultValue="true"
		/>
		<CheckBoxPreference
			android:key="@string/config_splitActionBarEnabled_key"
			android:title="@string/config_splitActionBarEnabled_title"
			android:summary="@string/config_splitActionBarEnabled_summary"
			android:defaultValue="true"
		/>
	</PreferenceCategory>
	
	<PreferenceCategory android:title="@string/config_category_gps">
		<ListPreference 
		    android:key="@string/config_gps_source_key"
		    android:title="@string/config_gps_source_title"
			android:summary="@string/config_gps_source_summary"
			android:entries="@array/gps_source"
			android:entryValues="@array/gps_source_keys"
			android:defaultValue="internal"
		    />
		<EditTextPreference
			android:key="@string/config_gps_source_tcp_key"
			android:title="@string/config_gps_source_tcp_title"
			android:summary="@string/config_gps_source_tcp_summary"
			android:dialogTitle="@string/config_gps_source_tcp_title"
			android:defaultValue="127.0.0.1:1958"
		/>
		<EditTextPreference
			android:key="@string/config_gps_interval_key"
			android:title="@string/config_gps_interval_title"
			android:summary="@string/config_gps_interval_summary"
			android:dialogTitle="@string/config_gps_interval_title"
			android:defaultValue="1000"
			android:numeric="integer"
		/>
		<EditTextPreference
			android:key="@string/config_gps_distance_key"
			android:title="@string/config_gps_distance_title"
			android:summary="@string/config_gps_distance_summary"
			android:dialogTitle="@string/config_gps_distance_title"
			android:numeric="decimal"
			android:defaultValue="5.0"
		/>
		
	</PreferenceCategory>
	
	<PreferenceCategory android:title="@string/config_category_server">
		<Preference
			android:title="@string/config_apibutton_title"
			android:key="@string/config_api_button_key"
			android:summary="@string/config_apibutton_summary">
		</Preference>
		<de.blau.android.prefs.LoginDataPreference
			android:key="@string/config_loginbutton_key"
			android:title="@string/config_loginbutton_title"
			android:summary="@string/config_username_summary"
			android:dialogTitle="@string/config_loginbutton_title"
			android:singleLine="true"
		/>
		<EditTextPreference
			android:key="@string/config_offsetServer_key"
			android:title="@string/config_offsetServer_title"
			android:summary="@string/config_offsetServer_summary"
			android:defaultValue="http://offsets.textual.ru/"
		/>
	</PreferenceCategory>
	<PreferenceCategory android:title="@string/config_category_acra">
		<CheckBoxPreference android:key="acra.enable"
			android:title="@string/pref_enable_acra"
			android:summaryOn="@string/pref_acra_enabled"
			android:summaryOff="@string/pref_acra_disabled"
			android:defaultValue="true"
		/>
	</PreferenceCategory>
	
	<PreferenceCategory android:title="@string/config_category_misc">
	    <EditTextPreference
			android:key="@string/config_tileCacheSize_key"
			android:title="@string/config_tileCacheSize_title"
			android:summary="@string/config_tileCacheSize_summary"
			android:dialogTitle="@string/config_tileCacheSize_title"
			android:numeric="integer"
			android:defaultValue="100"
		/>
		<CheckBoxPreference
			android:key="@string/config_showStats_key"
			android:title="@string/config_showStats_title"
			android:summary="@string/config_showStats_summary"
			android:defaultValue="false"
		/>
		<CheckBoxPreference
			android:key="@string/config_enableAntiAliasing_key"
			android:title="@string/config_enableAntiAliasing_title"
			android:summary="@string/config_enableAntiAliasing_summary"
			android:defaultValue="true"
		/>
		<EditTextPreference
			android:key="@string/config_maxStrokeWidth_key"
			android:title="@string/config_maxStrokeWidth_title"
			android:summary="@string/config_maxStrokeWidth_summary"
			android:dialogTitle="@string/config_maxStrokeWidth_title"
			android:numeric="decimal"
			android:defaultValue="16.0"
		/>
	</PreferenceCategory>
			
</PreferenceScreen>
